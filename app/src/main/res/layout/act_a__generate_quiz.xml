<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".A__GenerateQuiz">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvEnterQuizName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Quiz Name" />

            <EditText
                android:id="@+id/etQuizName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="auto" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvEnterNrOfRounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter nr of rounds" />

            <EditText
                android:id="@+id/etNrOfRounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvEnterNrofTeams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter number of teams" />

            <EditText
                android:id="@+id/etNrOfTeams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnInitGenerator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="initialize" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <fragment
                android:id="@+id/fragment"
                android:name="com.example.paperlessquiz.FragSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/frag_spinner" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvEnterNrOfQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nr of questions for this round" />

            <EditText
                android:id="@+id/etNrOfQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="1" />
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/btnGenerateQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/tvDisplayQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="quiz summary" />

</LinearLayout>